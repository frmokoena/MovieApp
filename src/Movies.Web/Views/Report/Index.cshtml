@model Movies.Web.Models.ListReportViewModel

@{
    ViewData["Title"] = "Report";
}

<h1>List Report</h1>

<form asp-controller="Report" asp-action="Index" method="get">
    <p>
        Genre:
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        <input type="submit" value="Filter" />
    </p>
</form>

<div>
    @if (!Model.Movies.Any())
    {
        <hr />
    }
    else
    {
        @foreach (var entity in Model.Movies)
        {
            <partial name="_ReportPartial"
                     model="entity" />
        }       
    }
</div>