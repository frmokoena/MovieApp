@model Movies.Data.Entities.Movie

<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.MovieName)
    </dt>
    <dd class="col-sm-10">
        @*@Html.DisplayFor(model => model.MovieName)*@
        @Html.ActionLink(Model.MovieName, "Details", "Movies", new { id = Model.MovieID })
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ReleaseYear)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ReleaseYear)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Genre)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.MovieGenre.GenreName)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Characters)
    </dt>
    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>Character Name</th>
                <th>Actor</th>
                <th>Date Of Birth</th>
            </tr>
            @foreach (var item in Model.Characters)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CharacterName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Actor.ActorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Actor.ActorDOB)
                    </td>
                </tr>
            }
        </table>
    </dd>
</dl>
