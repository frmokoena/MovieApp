@model Movies.Data.Entities.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieGenre.GenreName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Characters)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Character Name</th>
                    <th>Actor</th>
                    <th>Date Of Birth</th>
                </tr>
                @foreach (var item in Model.Characters)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CharacterName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Actor.ActorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Actor.ActorDOB)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
