@model Movies.Data.Entities.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieGenre.GenreName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Characters)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Character Name</th>
                    <th>Actor</th>
                    <th>Date Of Birth</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Characters)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CharacterName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Actor.ActorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Actor.ActorDOB)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Characters", new { actorId = item.ActorID, movieId = item.MovieID }) |
                            @Html.ActionLink("Delete", "Delete", "Characters", new { actorID = item.ActorID, movieId = item.MovieID })
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Add Character", "Character", new { id = Model.MovieID }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.MovieID }) |
    <a asp-action="Index">Back to List</a>
</div>
